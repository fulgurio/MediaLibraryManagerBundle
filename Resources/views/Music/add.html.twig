{% extends 'FulgurioMediaLibraryManagerBundle::base.html.twig' %}

{% trans_default_domain 'music' %}

{% block content %}
	<h1>{{ (album.id ? 'edit_album': 'add_new_album')|trans({ '%TITLE%': album.title }) }}</h1>
    {{ form_start(form, {'attr': { 'class': 'form-horizontal form-music' }}) }}
    {{ form_errors(form) }}
	<div class="row">
		<div class="col-md-6">
{{ form_row(form.artist) }}
{{ form_row(form.title) }}
{{ form_row(form.media_type, { 'group_class': 'col-sm-3' }) }}
{{ form_row(form.ean, { 'group_class': 'col-sm-4' } ) }}
{{ form_row(form.publication_year, { 'group_class': 'col-sm-3' }) }}
{{ form_row(form.publisher) }}
{{ form_row(form.coverFile) }}
{{ form_row(form.cover_url) }}
		</div>
		<div class="col-md-6">
{%   set volumeNb = 1 %}
{#{%   set trackNb = form.tracks|length %}
{%	 set track = form.tracks[0] %} #}
			<table class="table" id="tracks">
				<thead>
					<tr>
						<th style="width: 10%">{% trans %}track.track_number.label{% endtrans %}</th>
						<th style="width: 75%">{% trans %}track.title.label{% endtrans %}</th>
						<th style="width: 15%">{% trans %}track.duration.label{% endtrans %}</th>
						<th style="width: 10%">&nbsp;</th>
					</tr>
				</thead>
				<tbody>
{% if form.tracks.vars is not empty %}
{%   for trackNb, track in form.tracks %}
{%     set trackNb = trackNb + 1 %}
{%     include 'FulgurioMediaLibraryManagerBundle:Music:addTrack.html.twig' %}
{%   endfor %}
{% endif %}
{% if app.request.request.get('addTrack') %}
{%   set trackNb = app.request.request.get('addTrack')[volumeNb] + 1 %}
{%   set track = form.tracks.vars.prototype %}
{%   include 'FulgurioMediaLibraryManagerBundle:Music:addTrack.html.twig' %}
{% endif %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="4">
							<button type="submit" class="btn btn-primary pull-right" id="addTrack" name="addTrack[{{ volumeNb }}]" value="{{ form.tracks is not empty }}" tabindex="2">{% trans %}add_track{% endtrans %}</button>
						</td>
					</tr>
				</tfoot>
			</table>
		</div>
	</div>
				{#<div class="pull-right" id="searchResult"></div>
				<div class="clearfix"></div>#}
	<div class="form-actions form-actions-fixed-bottom">
		<input type="hidden" name="{{ form._token.vars.full_name }}" value="{{ form._token.vars.value }}" />
        {{ form_row(form.submit) }}
		<a href="{{ path('FulgurioMLM_Music_List') }}" class="btn">{% trans from 'common' %}cancel{% endtrans %}</a>
	</div>
{{ form_rest(form) }}
{{ form_end(form) }}
{% endblock %}

{% block css %}
		<link href="{{ asset('bundles/fulguriomedialibrarymanager/bootstrap-fileinput/css/fileinput.min.css') }}" rel="stylesheet">
{% endblock %}

{% block javascript %}
		<script type="text/x-tmpl" id="tmpl-track">
{% set track = form.tracks.vars.prototype %}
{% include 'FulgurioMediaLibraryManagerBundle:Music:addTrackJs.html.twig' %}
		</script>
		<script>
var searchUrl = '{{ path('FulgurioMLM_Music_Retrieve_Album_Infos') }}',
	lyricsUrl = '{{ path('FulgurioMLM_Music_Retrieve_Track_Lyrics') }}';
		</script>
		<script src="{{ asset('bundles/fulguriomedialibrarymanager/bootstrap-fileinput/js/fileinput.min.js') }}"></script>
		<script src="{{ asset('bundles/fulguriomedialibrarymanager/js/tmpl.min.js') }}"></script>
		<script src="{{ asset('bundles/fulguriomedialibrarymanager/js/music.js') }}"></script>
{% endblock %}
